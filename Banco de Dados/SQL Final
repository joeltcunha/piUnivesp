CREATE TABLE Clientes (
    ClienteID INT PRIMARY KEY AUTO_INCREMENT,
    Nome VARCHAR(100) NOT NULL,
    Endereco VARCHAR(255),
    Email VARCHAR(100),
    Telefone VARCHAR(20),
    CPF CHAR(11) UNIQUE,
    CNPJ CHAR(14) UNIQUE,
    CHECK (CPF IS NOT NULL AND CNPJ IS NULL OR CPF IS NULL AND CNPJ IS NOT NULL)
);

CREATE TABLE Produtos (
    ProdutoID INT PRIMARY KEY AUTO_INCREMENT,
    Nome VARCHAR(100) NOT NULL,
    Descricao TEXT,
    Preco DECIMAL(10, 2) NOT NULL,
    QuantidadeEmEstoque INT NOT NULL
);

CREATE TABLE Vendas (
    VendaID INT PRIMARY KEY AUTO_INCREMENT,
    ClienteID INT,
    DataDaVenda DATE NOT NULL,
    ValorTotal DECIMAL(10, 2) NOT NULL,
    FOREIGN KEY (ClienteID) REFERENCES Clientes(ClienteID)
);

CREATE TABLE ItensVendidos (
    ItemID INT PRIMARY KEY AUTO_INCREMENT,
    VendaID INT,
    ProdutoID INT,
    QuantidadeVendida INT NOT NULL,
    PrecoUnitario DECIMAL(10, 2) NOT NULL,
    FOREIGN KEY (VendaID) REFERENCES Vendas(VendaID),
    FOREIGN KEY (ProdutoID) REFERENCES Produtos(ProdutoID)
);

CREATE TABLE fornecedores (
FornecedorID int NOT NULL AUTO_INCREMENT,
Raz√£o_Social varchar(100) NOT NULL,
Endereco varchar(255) DEFAULT NULL,
Email varchar(100) DEFAULT NULL,
Telefone varchar(20) DEFAULT NULL,
CNPJ char(14) DEFAULT NULL,
PRIMARY KEY (`FornecedorID`),
UNIQUE KEY `CNPJ` (`CNPJ`)
);
